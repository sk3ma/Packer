{
  "builders": [
    {
      "type": "vmware-iso",
      "name": "vmware-template",
      "memory": 1024,
      "communicator": "ssh",
      "http_directory": "http",
      "cd_files": ["http/user-data", "http/meta-data"],
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "ssh_port": "{{user `ssh_port`}}",
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_timeout": "{{user `ssh_timeout`}}",
      "ssh_wait_timeout": "{{user `ssh_wait_timeout`}}",
      "ssh_pty": true,
      "ssh_handshake_attempts": "{{user `ssh_handshake_attempts`}}",
      "boot_wait": "5s",
      "boot_command": [
        "<esc><esc><esc><esc>e<wait>",
        "<del><del><del><del><del><del><del><del>",
        "<del><del><del><del><del><del><del><del>",
        "<del><del><del><del><del><del><del><del>",
        "<del><del><del><del><del><del><del><del>",
        "<del><del><del><del><del><del><del><del>",
        "<del><del><del><del><del><del><del><del>",
        "<del><del><del><del><del><del><del><del>",
        "<del><del><del><del><del><del><del><del>",
        "<del><del><del><del><del><del><del><del>",
        "<del><del><del><del><del><del><del><del>",
        "<del><del><del><del><del><del><del><del>",
        "<del><del><del><del><del><del><del><del>",
        "<del><del><del><del><del><del><del><del>",
        "<del><del><del><del><del><del><del><del>",
        "linux /casper/vmlinuz --- autoinstall ds=\"nocloud-net;seedfrom=http://{{.HTTPIP}}:{{.HTTPPort}}/\"<enter><wait>",
        "initrd /casper/initrd<enter><wait>",
        "boot<enter>",
        "<enter><f10><wait>"
      ],
      "shutdown_command": "echo 'ubuntu' | sudo -S shutdown -P now",
      "vmx_data": {
        "ethernet0.virtualDev": "vmxnet3",
        "memsize": "2048",
        "numvcpus": "2"
      },
      "vm_name": "ubuntu-20.04",
      "output_directory": "output-vmware-iso",
      "guest_os_type": "ubuntu-64",
      "disk_size": "10240",
      "headless": false
    }
  ],

  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sleep 30",
        "apt update",
        "apt upgrade -y",
        "apt install open-vm-tools -y"
      ]
    },
    {
      "execute_command": "echo 'ubuntu' | sudo -S -E bash '{{ .Path }}'",
      "type": "shell",
      "scripts": [
        "scripts/setup.sh",
        "scripts/tasks.sh"
      ]
    }
  ],
  "variables": {
        "iso_checksum": "sha256:b8f31413336b9393ad5d8ef0282717b2ab19f007df2e9ed5196c13d8f9153c8b",
        "iso_url": "https://releases.ubuntu.com/20.04.6/ubuntu-20.04.6-live-server-amd64.iso",
        "ssh_port": "22",
        "ssh_username": "ubuntu",
        "ssh_password": "ubuntu",
        "ssh_timeout": "10m",
        "ssh_wait_timeout": "20m",
        "ssh_handshake_attempts": "50"
    }
}
