{
  "builders": [
    {
      "type": "virtualbox-iso",
      "format": "ova",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "communicator": "ssh",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "ssh_port": "{{user `ssh_port`}}",
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_wait_timeout": "{{user `ssh_wait_timeout`}}",
      "ssh_pty": true,
      "ssh_handshake_attempts": "20",
      "shutdown_command": "echo 'ubuntu' | sudo -S shutdown -P now",
      "boot_command": [
        "<enter><wait>",
        "/install/vmlinuz ",
        "initrd=/install/initrd.gz ",
        "auto=true ",
        "priority=critical ",
        "url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg ",
        "debian-installer=en_US ",
        "locale=en_US ",
        "kbd-chooser/method=us ",
        "hostname={{ .Name }} ",
        "fb=false ",
        "debconf/frontend=noninteractive ",
        "keyboard-configuration/xkb-keymap=us ",
        "netcfg/get_hostname={{ .Name }} ",
        "netcfg/get_domain=ubuntuup.com ",
        "grub-installer/bootdev=/dev/sda ",
        "noapic "
      ],
      "boot_wait": "10s",
      "shutdown_timeout": "5m",
      "guest_os_type": "ubuntu-64",
      "disk_size": "10240",
      "headless": true,
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "2048"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "1"
        ]
      ],
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "ubuntu_vm_ubuntu_22_{{timestamp}}"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sleep 30",
        "echo '[NOTICE] Provisioning...' > /tmp/provision.log",
        "apt update >> /tmp/provision.log 2>&1",
        "apt upgrade -y >> /tmp/provision.log 2>&1",
        "apt install open-vm-tools -y >> /tmp/provision.log 2>&1"
      ]
    },
    {
      "execute_command": "echo 'ubuntu' | sudo -S -E bash '{{ .Path }}'",
      "type": "shell",
      "scripts": [
        "setup.sh",
        "tasks.sh"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "output-vmware-iso/{{.BuildName}}.box"
    }
  ],
  "variables": {
        "iso_checksum": "sha256:b8f31413336b9393ad5d8ef0282717b2ab19f007df2e9ed5196c13d8f9153c8b",
        "iso_url": "https://releases.ubuntu.com/20.04.6/ubuntu-20.04.6-live-server-amd64.iso",
        "ssh_port": "22",
        "ssh_username": "ubuntu",
        "ssh_password": "ubuntu",
        "ssh_wait_timeout": "30m"
    }
}
